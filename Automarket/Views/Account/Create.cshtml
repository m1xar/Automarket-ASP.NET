@model Automarket.Domain.ViewModels.UserViewModel
@using Automarket.Domain.Enum
@{
    ViewBag.Title = "Create";
    Layout = "_Layout";
}

<div class="container mx-auto mt-8">
    <h2 class="text-2xl font-bold mb-4">Create User</h2>

    @using (Html.BeginForm("Create", "Account", FormMethod.Post))
    {
            <div class="mb-4">
                <label for="Name" class="block text-sm font-medium text-gray-600">Name</label>
                <input type="text" id="Name" name="Name" class="mt-1 p-2 w-full border rounded-md" value="@Model.Name">
            </div>

            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-gray-600">Email</label>
                <input type="email" id="Email" name="Email" class="mt-1 p-2 w-full border rounded-md" value="@Model.Email">
            </div>

            <div class="mb-4">
                <label for="Password" class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" id="Password" name="Password" class="mt-1 p-2 w-full border rounded-md">
            </div>

            <div class="mb-4">
                <label for="Role" class="block text-sm font-medium text-gray-600">Role</label>
                <select id="Role" name="Role" class="mt-1 p-2 w-full border rounded-md">
                @foreach (UserRole role in Enum.GetValues(typeof(UserRole)))
                {
                            <option value="@role">@role</option>
                }
                </select>
            </div>

            <div class="mt-4">
                <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded">Create User</button>
            </div>
    }
</div>
